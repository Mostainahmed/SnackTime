<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:windowContentTransitions">true</item>
        </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

    <style name="mytoast">
        <item name="textBold">true</item>
        <item name="textColor">@color/colorPrimaryText</item>
        <!--<item name="font"></item>-->
        <item name="textSize">14sp</item>
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">#fff</item>
        <item name="iconStart">@drawable/smiley_snacks</item>
        <item name="iconEnd">@drawable/smiley_snacks</item>
        <item name="length">LONG</item>
        <item name="gravity">center</item>
        <item name="radius">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:layout_width">280dp</item>
    </style>

</resources>
